    private void btnCancel_Click(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_btnCancel_Click
        Clear();
        this.setVisible(false);
        mainForm.setVisible(true);
    }//GEN-LAST:event_btnCancel_Click

    private void btnClear_Click(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_btnClear_Click
        Clear();
    }//GEN-LAST:event_btnClear_Click

    private void Clear() {
        txtQuestion.setText("Your Question ...");
        txtAnswerA.setText("Answer A ...");
        txtAnswerB.setText("Answer B ...");
        txtAnswerC.setText("Answer C ...");
        txtAnswerD.setText("Answer D ...");
        
        grpCorrectAnswer.clearSelection();
    }
    
