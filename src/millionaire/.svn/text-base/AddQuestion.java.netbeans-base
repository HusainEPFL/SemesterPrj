    private void txtQuestion_FocusGained(java.awt.event.FocusEvent evt) {//GEN-FIRST:event_txtQuestion_FocusGained
        if("Your Question ...".equals(txtQuestion.getText())){
            txtQuestion.setText("");
        }
    }//GEN-LAST:event_txtQuestion_FocusGained

    private void txtQuestion_FocusLost(java.awt.event.FocusEvent evt) {//GEN-FIRST:event_txtQuestion_FocusLost
        if("".equals(txtQuestion.getText())){
            txtQuestion.setText("Your Question ...");
        }
    }//GEN-LAST:event_txtQuestion_FocusLost

    private void txtAnswerA_FocusGained(java.awt.event.FocusEvent evt) {//GEN-FIRST:event_txtAnswerA_FocusGained
